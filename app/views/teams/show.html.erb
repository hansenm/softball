<h1><%= @team.name %></h1>
<%= link_to "Edit", edit_team_path(@team) %>
| <%= link_to "Delete this Team",
              @team,
              method: "Delete",
              confirm: "Are you sure you want to delete this team?" %>

<p>This team fields players in <strong><%= @team.distinct_positions %></strong> positions.</p>

<table>
  <caption>Roster</caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th></th>
  </thead>
  <tbody>
  <% @team.players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.position %></td>
      <td><%= link_to "Edit", edit_team_player_path(player.team, player) %>
          | <%= link_to "Delete", player, method: :delete, confirm: "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Add a Player", new_team_player_path(@team) %>
